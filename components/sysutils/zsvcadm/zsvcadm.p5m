set name=pkg.fmri value=pkg:/system/zsvcadm@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="The svcadm GUI wrapper utility"
set name=pkg.description \
    value="A GUI wrapper around svcadm simplifies management of SMF services in an X11 session"
set name=info.classification \
    value="org.opensolaris.category.2008:Applications/System Utilities"
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)
license opensolaris.license license="CDDL"

file files/zsvcadm path=usr/bin/zsvcadm mode=0555
depend type=require fmri=pkg:/gnome/zenity
